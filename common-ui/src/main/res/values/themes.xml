<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarvelApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MarvelApp.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MarvelApp.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.MarvelApp.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.MarvelApp.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.MarvelApp.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.MarvelApp.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.MarvelApp.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.MarvelApp.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MarvelApp.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MarvelApp.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MarvelApp.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.MarvelApp.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.MarvelApp.Overline</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

</resources>